<%= render partial: 'users/subscribe' %>

<div class="row">
  <div class="col-sm-12">
    <div class="article-image">
      <%= image_tag @article.image.url(:medium) %>
    </div>

    <div class="article-headline">
      <h1>
        <%= @article.headline %>
      </h1>
    </div>

    <div class="article-body">
      <%= h @article.body.html_safe %>
    </div>
  </div>
</div>
