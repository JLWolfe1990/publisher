<%= simple_form_for @article, html: { multipart: true } do |f| %>
  <%= f.input :image, as: :file, label: false %>
  <%= f.input :status, as: :select,
              collection: [['Draft', nil], ['Archived', 'archived'], ['Active', 'active']],
              include_blank: false %>
  <%= f.input :headline %>
  <%= f.input :description %>
  <%= f.input :body %>
  <%= f.submit 'Update', class: 'btn btn-success'%>
<% end %>
